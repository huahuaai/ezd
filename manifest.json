{
  "manifest_version": 3,
  "name": "EzDrop",
  "version": "1.0.0",
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "host_permissions": [
    "https://mp.weixin.qq.com/*"
  ],
  "permissions": [
    "storage",
    "tabs",
    "sidePanel",
    "scripting",
    "alarms",
    "contextMenus",
    "downloads",
    "scripting",
    "clipboardRead",
    "clipboardWrite"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "src/assets/icon64.png",
      "32": "src/assets/icon64.png",
      "48": "src/assets/icon64.png",
      "128": "src/assets/icon64.png"
    }
  },
  "icons": {
    "16": "src/assets/icon64.png",
    "32": "src/assets/icon64.png",
    "48": "src/assets/icon64.png",
    "128": "src/assets/icon64.png"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "options_page": "src/options/index.html",
  "content_scripts": [
    {
      "matches": [
        "https://mp.weixin.qq.com/cgi-bin/filepage*",
        "https://mp.weixin.qq.com/cgi-bin/appmsg*count=10*action=list_video*"
      ],
      "js": [
        "src/content_scripts/material_script.js-loader.js"
      ],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://mp.weixin.qq.com/cgi-bin/appmsg*/appmsg_edit*"
      ],
      "js": [
        "src/content_scripts/edit_script.js-loader.js"
      ],
      "css": [
        "src/ripple.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/ripple.css",
        "src/assets/videoaccount.svg",
        "src/assets/codebox.svg",
        "src/assets/qrcode.svg",
        "src/assets/qrcodeselected.svg",
        "src/assets/addFolder.svg",
        "src/assets/seqFrame.svg",
        "src/assets/seqFrameTreeNode.svg",
        "src/assets/folderTreeNode.svg",
        "src/assets/link.svg",
        "src/assets/linked.svg",
        "src/assets/lrslide.svg",
        "src/assets/lrslideselected.svg"
      ],
      "matches": [
        "https://mp.weixin.qq.com/*"
      ]
    },
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": true
    }
  ]
}
